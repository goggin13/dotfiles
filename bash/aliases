# Navigation
alias ..="cd .."
alias cs="cd $CS"
alias bnter="cd $BNTER"
alias bnterr="cd $BNTERR"
alias fchat="cd $FCHAT"
alias dot="cd $DOTFILES"
alias m="mate ."
alias h="history"
alias o="open ."
alias ppd="popd"

# Alias management
alias reload="source ~/.bashrc"
alias pushdot="sudo git add -A; sudo git commit -m 'update dotfiles'; sudo git pull; sudo git push origin master"

# Processes
alias tu='top -o cpu' # cpu
alias tm='top -o vsize' # memory

# Git
alias g='clear; git status'
alias gaa='git add -A'
alias wipeout="git reset --hard HEAD; git pull"

function pd () {
	pushd $1
}

function gd () {
	git diff $1
}

function ga () {
	git add $1
}

function gco () {
	git checkout $1
}

function gpu () {
	git push $1
}

function gp () {
	git pull $1
}

function gacp () {
	ga $1
	gg $2
}

function take {
	mkdir $1
	cd $1
}

