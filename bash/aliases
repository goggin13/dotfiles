
# Applications
alias clojure="java -cp /Users/mattgoggin/Library/Clojure/clojure.jar clojure.main"
alias js="java -cp /Users/goggin/Documents/CS/rhino/js.jar:/Users/goggin/Documents/CS/rhino/jline.jar jline.ConsoleRunner org.mozilla.javascript.tools.shell.Main -opt -1"
alias watch_bnter_r="cd $BNTERR/public/javascripts; coffee --watch -o coffee_js/ -c coffee/"
alias watch_bnter_t="cd $BNTERR/test/jasmine/js; coffee --watch -o coffee_js/ -c coffee/"
alias watch_bnter="cd $BNTER/web/assets/js; coffee --watch -o coffee_js/ -c coffee/"
alias sag="sudo apachectl graceful"
alias flush_logs="cd $BNTERR && rm -f log/*.log"

# minify 
alias min_bnter="python $BNTER/tests/pyagg/pyagg.py $BNTER/tests/pyagg.js"
alias min_fchat="python $FCHAT/pyagg/pyagg.py $FCHAT/tests/pyagg.js"

# Navigation
alias ..="cd .."
alias cs="cd $CS"
alias bnter="cd $BNTER"
alias bnterr="cd $BNTERR"
alias fchat="cd $FCHAT"
alias m="mate ."
alias dot="cd $DOTFILES"
alias dotm="cd $DOTFILES && m"
alias h="history"
alias o="open ."
alias ppd="popd"

# Alias management
alias reload="source ~/.bashrc"
alias pushdot="sudo git add -A; sudo git commit -m 'update dotfiles'; sudo git pull; sudo git push origin master"

# Processes
alias tu='top -o cpu' # cpu
alias tm='top -o vsize' # memory

# Git
alias g='clear; git status'
alias b='clear; echo ====== BRANCHES ======; git branch'
alias gaa='git add -A'
alias wipeout="git reset --hard HEAD; git pull"

function pd () {
	pushd $1
}

function gd () {
	git diff $1
}

function take {
	mkdir $1
	cd $1
}

function be () {
	bundle exec $1 $2 $3 $4
}
